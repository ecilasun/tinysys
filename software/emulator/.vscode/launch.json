	"version": "0.2.0",
    "configurations": [
	    {
            "name": "C++ Launch (Win)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\bin\\tinysys.exe",
            "args": ["ROMs\\rom.bin"],
            "cwd": "${workspaceFolder}\\",
            "stopAtEntry": false,
            "environment": [],
            "externalConsole": false
        },
	    {
            "name": "C++ Launch (Linux)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/release/tinysys",
            "args": ["ROMs/rom.bin"],
            "cwd": "${workspaceFolder}/"
        },
	    {
            "name": "C++ Launch (Darwin)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/release/mactinysys",
            "args": ["ROMs/rom.bin"],
            "cwd": "${workspaceFolder}/"
        }
    ]
}